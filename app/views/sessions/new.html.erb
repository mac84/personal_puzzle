<div>
  <h1>Logga in!</h1>

  <%= form_tag session_path do %>
    <p>
      <%= label_tag :email, 'E-postadress' %> <br />
      <%= text_field_tag :email, params[:email] %>
    </p>
    <p>
      <%= label_tag :password, 'Lösenord' %> <br />
      <%= password_field_tag :password %>
    </p>
    <p><%= link_to "Glömt lösenordet?", new_password_reset_path %></p>
    <div class="field">
      <%= check_box_tag :remember_me, 1, params[:remember_me] %>
      <%= label_tag :remember_me, "Kom ihåg mig på den här datorn" %>
    </div>
    <p class="btn button">
      <%= submit_tag 'Logga in', :id => "login" %>
    </p>
  <% end %>
  <%= link_to "Skapa ny användare", new_user_path %>
</div>